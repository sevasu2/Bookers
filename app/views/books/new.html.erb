<p id="notice">
<%= flash[:success]  %>
</p>
<h1>Books</h1>

<table>
  <thead>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
  </thead>

  <tbody>
　　<% @books.each do |book| %>
　　<tr> 
      <td>
　　      <%= book.title %>
      </td>
      <td>
　　      <%= book.body %>
　　  </td>
  <!-- <tb> -->
      <td><%= link_to "Show", book_path(book.id),class:"show_#{book.id}" %></td>
      <td><%= link_to "Edit", edit_book_path(book.id),class:"edit_#{book.id}" %></td>
      <td><%= link_to "Destroy", book_path(book.id), method: :delete,"data-confirm" => "Are you sure?",class:"destroy_#{book.id}" %></td>
    </tr>
      <% end %>
  </tbody>
</table>



<h2>New book</h2>
<% if @book.errors.any? %>
  <div id="error_explanation" class="alert alert-danger">
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<%= form_for(@book) do |f| %>
<div class="field">
	<label for="book_title">Title</label>
<%= f.text_field :title,class:"book_title" %>
</div>

<div class="field">
	<label for="book_body">Body</label>
<%= f.text_area :body,class:"book_body" %>
</div>


<%= f.submit 'Create Book' %>

<% end %>
